<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment">

    <TextView
        android:id="@+id/text_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="355dp"
        android:layout_height="41dp"
        android:id="@+id/txtTitle"
        android:textSize="30dp"
        android:text="RTO Numbers in India"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.385"
        app:layout_constraintVertical_bias="0.001"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/currentDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the Date"
        android:hint="Current Date" />
    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:layout_width="381dp"
        android:layout_height="53dp"
        android:inputType="textPersonName"
        android:id="@+id/etRTOState"
        android:hint="State Code / RTO Name"
        android:ems="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.385"
        app:layout_constraintVertical_bias="0.093"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="8dp"
        />
    <EditText
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:inputType="textCapCharacters"
        android:id="@+id/etRTOCode"
        android:hint="RTO Code"
        android:ems="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.817"
        app:layout_constraintVertical_bias="0.093"
        app:layout_constraintTop_toBottomOf="@+id/etRTOState"
        />
    <Button
        android:text="Get RTO"
        android:layout_width="148dp"
        android:layout_height="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:background="@drawable/button_save"
        android:id="@+id/btDetail" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="452dp"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="49dp"
        android:inputType="textPersonName"
        android:id="@+id/rtoSpeech"
        android:hint="State Code / RTO Name"
        android:ems="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btDetail"
        app:layout_constraintHorizontal_bias="0.106"
        app:layout_constraintVertical_bias="0.024"
        android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:text="Speak"
        android:layout_width="148dp"
        android:layout_height="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rtoSpeech"
        app:layout_constraintHorizontal_bias="0.969"
        android:background="@drawable/button_save"
        app:layout_constraintVertical_bias="0.0"
        android:id="@+id/btnSpeech" android:layout_marginBottom="396dp"/>

    <TextView
        android:layout_width="387dp"
        android:layout_height="383dp"
        android:id="@+id/tvSummary"
        android:textSize="30dp"
        android:text="Summary"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.164"
        app:layout_constraintVertical_bias="1.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>